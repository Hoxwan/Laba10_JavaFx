<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.RestaurantOrderController">
    <CheckBox fx:id="dish1" text="Dish 1 (\$10)" layoutX="14.0" layoutY="14.0" onAction="#handleDishSelection"/>
    <TextField fx:id="quantity1" layoutX="150.0" layoutY="10.0" text="1"/>

    <CheckBox fx:id="dish2" text="Dish 2 (\$15)" layoutX="14.0" layoutY="50.0" onAction="#handleDishSelection"/>
    <TextField fx:id="quantity2" layoutX="150.0" layoutY="46.0" text="1"/>

    <Button text="Calculate" layoutX="14.0" layoutY="90.0" onAction="#calculateOrder"/>
    <Label fx:id="orderSummary" layoutX="14.0" layoutY="130.0"/>
</AnchorPane>
