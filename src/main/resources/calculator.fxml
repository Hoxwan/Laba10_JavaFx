<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.CalculatorController">
    <children>
        <TextField fx:id="inputField" layoutX="14.0" layoutY="14.0" />
        <Button text="+" layoutX="14.0" layoutY="50.0" onAction="#handleAddition"/>
        <Button text="-" layoutX="50.0" layoutY="50.0" onAction="#handleSubtraction"/>
        <Button text="*" layoutX="86.0" layoutY="50.0" onAction="#handleMultiplication"/>
        <Button text="/" layoutX="122.0" layoutY="50.0" onAction="#handleDivision"/>
        <Label fx:id="resultLabel" layoutX="14.0" layoutY="90.0"/>
    </children>
</AnchorPane>
